<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

	<body>
		<referenceContainer name="main" htmlClass="homepage column main" />
		<referenceContainer name="content">

			<container name="home-banner" htmlTag="section" htmlClass="home-banner" before="-">
				<block class="Magento\Cms\Block\Block" name="home-b" before="-">
					<arguments>
						<argument name="block_id" xsi:type="string">home_banner</argument>
					</arguments>
				</block>
			</container>

			<container name="hp-info-blocks" htmlTag="section" htmlClass="hp-info-blocks">
				<container name="hp-info-left" htmlClass="hp-info left" htmlTag="div">
					<block class="Magento\Cms\Block\Block" name="hp-left" before="-">
						<arguments>
							<argument name="block_id" xsi:type="string">hp-left</argument>
						</arguments>
					</block>
				</container>
                <container name="hp-info-right" htmlClass="hp-info right" htmlTag="div">
					<block class="Magento\Cms\Block\Block" name="hp-right" before="-">
						<arguments>
							<argument name="block_id" xsi:type="string">hp-right</argument>
						</arguments>
					</block>
				</container>
			</container>

		</referenceContainer>

	</body>
</page>
